<h1>Create New Group</h1>

<div class="col-sm-12 group_container">	
	<div class="form_container">
		<%= form_tag({:action => 'new'}, class: 'form-horizontal') do%>
			  <div class="form-group">
			    <%= label_tag 'Group Name', nil, class: "control-label" %>
			    <%= text_field_tag :name, nil, class: "form-control" %>
			  </div>
			  <div class="form-group">
			    <%= label_tag 'Group Type', nil, class: "control-label" %>
			    <%= select_tag(:type, options_for_select([['Master List', 1], ['Secret Lists', 2], ['Open Lists', 3]]), class: "form_control") %>
			  </div>
			  <div class="form-group">
			    <%= label_tag 'Group Description', nil, class: "control-label" %>
			    <%= text_area_tag :description, nil, class: "form-control" %>
			  </div>		  
			  <div class="form-group">
			    <%= submit_tag "Create Group" , class: "btn" %>
			  </div>
		<% end %>
	</div>
</div>
